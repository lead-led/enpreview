{
	"productName": "Enpreview",
	"appId": "org.erb.enpreview",
	"directories": {
		"output": "dist"
	},
	"files": [
		"src/electron.cjs",
		"src/preload.cjs",
		"src/main/**/*",
		{
			"from": "build",
			"to": ""
		}
	],
	"publish": {
		"provider": "github",
		"owner": "lead-led",
		"repo": "enpreview"
	},
	"mac": {
		"target": [
			{
				"target": "default",
				"arch": ["arm64", "x64"]
			}
		]
	},
	"linux": {
		"target": ["AppImage", "tar.gz"],
		"category": "Utility"
	},
	"win": {
		"target": "nsis"
	}
}
